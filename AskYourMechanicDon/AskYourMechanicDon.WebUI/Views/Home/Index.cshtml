@model AskYourMechanicDon.Core.ViewModels.ProductListViewModel
    @{
    ViewBag.Title = "Home Page";
}

<h1>Ask Your Question</h1>

<div class="col-md-10">
    @foreach (var Item in Model.Products)
    {
        <div class="col-md-10">
            <div class="col-md-10">
            </div>
            <div class="col-md-10">
                <h4>Price $@Item.Price</h4>
            </div>
            <div class="col-md-10">
                <form action="@Url.Action("AddToBasket","Basket")" method="post">
                    <input type="hidden" name="Id" value="@Item.Id">
                    <p>
                        VIN: <input type="text" name="Vin">
                    </p>
                   <p>
                        <strong>Your Question:</strong>
                        <br /><textarea rows="15" name="Question" cols="50">Enter your question</textarea>
                    </p>
                    <br />
                    <input type="submit" class="btn btn-default" value="Add to Basket">
                </form>
            </div>
        </div>

    }
</div>
<div class="cold-md-10 clearfix"/>