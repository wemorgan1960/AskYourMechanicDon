@model IEnumerable<AskYourMechanicDon.Core.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>

@foreach(var Item in Model)
    {
    <div class="col-md-4" style="height:450px;padding:10px;margin:10px;border:solid thin whitesmoke"> </div>
        <div class="col-md-12">
            <img class="img" style="height:250px" src="~/Content/ProductImages/@Item.Image" />
        <div class="col-md-12">
            <strong>@Html.ActionLink(Item.Name, "Details", new { id = Item.Id })</strong>
        </div>
        <div class="col-md-12">
            <p>@Item.Description</p>
        </div>
        <div class="col-md-12">
            <h4>@Item.Price</h4>
        </div>
        <div class="col-md-12">
            <a href="#" class="btn btn-default">Add to Basket</a>
        </div>
    </div>

    }
<div class="cold-md-12 clearfix"/>