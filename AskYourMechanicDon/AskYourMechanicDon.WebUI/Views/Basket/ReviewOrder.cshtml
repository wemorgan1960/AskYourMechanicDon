@model IEnumerable<AskYourMechanicDon.Core.ViewModels.BasketItemViewModel>

@{ViewBag.Title = "Basket";
    int count = 1;
    decimal gTotal = 0;}

<table class="table">
    <tr>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quanity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Line Total
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td><img class="img" src="~/Content/ProductImages/@item.Image" style="height:50px" /></td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Vin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quanity)
            </td>
            <td>
                @String.Format("{0:c}", item.Price)
            </td>
            <td>
                @String.Format("{0:c}", item.Price * item.Quanity)
            </td>
        </tr>
        gTotal = gTotal + item.Price;

    }
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td class="grandtotal"><b>Grand total</b> Canadian Dollars $<span><b>@gTotal</b></span></td>
    </tr>
</table>
<div class="paypaldiv">
    <form class="paypalform" action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post" target="_top">
        <input type="hidden" name="cmd" value="_cart">
        <<input type="hidden" name="hosted_button_id" value="ENLYF2UB52CTE">
        <input type="hidden" name="upload" value="1">
        <input type="hidden" name="business" value="bmorgan-facilitator@telusplanet.net">

        @foreach (var item in Model)
    {
        <input type="hidden" name="item_name_@count" value="@item.ProductName">
        <input type="hidden" name="amount_@count" value="@item.Price">
        <input type="hidden" name="quantity_@count" value="@item.Quanity">
    count++;
}

        <input type="hidden" name="currency_code" value="CAD">
        <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_paynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
        <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">

    </form>
</div>
    <br />

    @section Scripts {
        <script>

            $(function () {

                /*
                * Place order
                */

                $("a.placeorder").click(function (e) {
                    e.preventDefault();

                    var $this = $(this);

                    var url = "/Basket/PayPalPayment";

                    $(".ajaxbg").show();

                    $.post(url, {}, function (data) {
                        $(".ajaxbg span").text("Thank you. You will now be redirected to paypal.");
                        setTimeout(function () {
                            $('form input[name="submit"]').click();
                        }, 2000);
                    });
                });

                //////////////////////////////////////////////////////////////

            });

        </script>

    }
